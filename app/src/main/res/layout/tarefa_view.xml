<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20pdp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/checkboxTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/descTarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/checkboxTarefa"
            android:layout_toStartOf="@id/btnDeleteTarefa"
            android:layout_centerVertical="true"
            android:text="descicaoPlaceHolder"/>
        
        <ImageButton
            android:id="@+id/btnDeleteTarefa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete_foreground"
            android:background="@drawable/delete_round_button_backgroun"
            android:scaleType="fitCenter"
            />

    </RelativeLayout>
    
</androidx.cardview.widget.CardView>